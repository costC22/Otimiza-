
{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:9002",
    "distDir": "../.next",
    "frontendDist": "../.next"
  },
  "package": {
    "productName": "otimiza_plus",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "message": true,
        "ask": true,
        "confirm": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "copyFile": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "renameFile": true,
        "writeFile": true,
        "scope": ["**"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["**"]
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true,
        "version": true,
        "platform": true,
        "hostname": true,
        "type": true
      },
      "path": {
        "all": true
      },
      "process": {
        "all": true,
        "relaunch": true,
        "exit": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "scope": [],
        "sidecar": false
      },
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "setAlwaysOnTop": true,
        "setDecorations": true,
        "setFocus": true,
        "setFullscreen": true,
        "setIcon": true,
        "setIgnoreCursorEvents": true,
        "setMaxSize": true,
        "setMinSize": true,
        "setPosition": true,
        "setSize": true,
        "setSkipTaskbar": true,
        "startDragging": true,
        "show": true,
        "toggleMaximize": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "SystemUtility",
      "copyright": null,
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.otimizaplus.app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "decorations": true,
        "fullscreen": false,
        "height": 600,
        "label": null,
        "resizable": true,
        "skipTaskbar": false,
        "title": "Otimiza+",
        "transparent": false,
        "width": 800
      }
    ]
  }
}
